<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorInActionBar</item>
    </style>

    <style name="editPageLabel" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/editPageColor</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:paddingTop">@dimen/activity_half_margin</item>
        <item name="android:paddingBottom">@dimen/activity_half_margin</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="editPageTextBox" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@android:color/white</item>
        <item name="android:shadowDx">3.0</item>
        <item name="android:shadowDy">3.0</item>
        <item name="android:shadowColor">@android:color/darker_gray</item>
        <item name="android:paddingTop">@dimen/activity_half_margin</item>
        <item name="android:paddingBottom">@dimen/activity_half_margin</item>
        <item name="android:paddingStart">@dimen/activity_half_margin</item>
        <item name="android:paddingEnd">@dimen/activity_half_margin</item>
        <item name="android:textSize">@dimen/font_size</item>
    </style>

</resources>
