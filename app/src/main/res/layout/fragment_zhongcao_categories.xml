<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/activity_margin"
    android:paddingEnd="@dimen/activity_margin"
    android:background="@color/colorCategoryBackground"
    tools:context=".zhongcao.ZhongcaoCategoriesFragment">

    <TextView
        android:id="@+id/zhongcao_categories_list_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_margin"
        android:fontFamily="serif"
        android:text="@string/title_zhongcao_list"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/font_size_xl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/zhongcao_categories"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/zhongcao_categories_list_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/activity_margin"
        tools:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/zhongcao_category_item" />

</android.support.constraint.ConstraintLayout>
