<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/fragment_zhongcao_categories"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorItemBackground"><!-- FIXME 背景色失效 -->

    <com.gcssloop.widget.RCRelativeLayout
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/cover_wrapper"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/activity_margin"
        android:layout_marginTop="@dimen/activity_half_margin"
        android:layout_marginBottom="@dimen/activity_half_margin"
        app:round_as_circle="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cover"
            android:contentDescription="@string/category"
            tools:src="@drawable/welcome_page" />

    </com.gcssloop.widget.RCRelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        app:layout_constraintStart_toEndOf="@id/cover_wrapper"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/activity_half_margin"
        android:textSize="@dimen/font_size"
        tools:text="@string/app_name"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/entrance"
        android:contentDescription="@string/enter_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/activity_half_margin"
        android:src="@drawable/ic_chevron_right_black"
        android:background="?android:attr/selectableItemBackground"
        />

</android.support.constraint.ConstraintLayout>